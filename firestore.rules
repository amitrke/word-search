rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write their own user document
    match /users/{userId} {
      allow read: if request.auth.uid == userId || request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if request.auth.uid == userId;
    }

    // Puzzles are read-only to all (authenticated and guests)
    match /puzzles/{document=**} {
      allow read: if true;
      allow create, update, delete: if false; // Only server can write puzzles
    }

    // User puzzle progress - users can read/write their own
    match /userPuzzles/{document=**} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Daily challenges - read-only to all
    match /dailyChallenges/{document=**} {
      allow read: if true;
      allow create, update, delete: if false; // Only server can write
    }

    // User profiles - users can read their own
    match /userProfiles/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if false; // Server manages this
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
